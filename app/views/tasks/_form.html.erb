<% if @task.errors.any? %>
  <h3><%= @task.errors.count %>件のエラーがあります。</h3>
  <% @task.errors.full_messages.each do|msg| %>
    <%= msg %>
  <% end %>
<% end %>
<br>
<%= form_with(model:@task,local:true)do|f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div>
  <%= f.label :deadline %><br>
  <%= f.date_field :deadline %>
</div>
<div>
  <%= f.label :status %><br>
  <%= f.select :status,Task.task_statuses.keys, include_blank:"選択してください" %>
</div>
  <%= f.submit "登録する" %>
<% end %>
