<h1>タスク一覧</h1>
<% if notice.present? %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<div class="task_count_now">
  <p>現在<%= @task.count %>件のタスクが表示されています</p>
</div>
<div class="main_container">
<table>
 <div class="task_item">
  <tr>
    <th>タスク名</th>
    <th>詳細</th>
    <th>ステータス</th>
  </tr>
    <% @tasks.each do |task| %>
    <tr class = "task_row" >
    <td><%= task.title %></td>
    <td><%= task.content %></td>
    <td><%= task.status %></td>

    <td><%= link_to '編集', edit_task_path(task.id), data: { confirm: '編集していいですか？' } %></td>
    <td><%= link_to "詳細", task_path(task.id) %></td>
    <td><%= link_to '削除', task_path(task.id), method: :delete, data: { confirm: '削除してよいですか？' } %></td>
  </tr>
 </div>
<% end %>
</table>
</div>

<div>
    <%= link_to 'タスクを登録する',new_task_path, class:'btn btn-info' %>
</div>
